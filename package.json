{
  "name": "electron-edge-js-quick-start",
  "version": "1.0.0",
  "description": "Minimal Electron application using `electron-edge-js` with .NET",
  "main": "main.js",
  "scripts": {
    "start": "electron --core .",
    "start:core": "electron --core .",
    "start:standard": "electron --standard .",
    "app:dir": "electron-builder --dir",
    "app:dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "author": "Redcore Solutions",
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo",
    "Edge",
    "Edge.js"
  ],
  "license": "MIT",
  "dependencies": {
    "electron": "^30.0.1",
    "electron-edge-js": "^30.0.1"
  },
  "devDependencies": {
    "electron-builder": "^24.13.3"
  },
  "win": {
    "target": "nsis",
    "extraFiles": ["./src/QuickStart.Core/bin/Debug/net7.0/**"]
  },
  "nsis": {
    "oneClick": true,
    "perMachine": false,
    "allowElevation": true,
    "unicode": true,
    "deleteAppDataOnUninstall": true,
    "runAfterFinish": true
  },
  "build": {
    "appId": "your.id",
    "mac": {
      "category": "your.app.category.type"
    }
  }
}
